<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prihibited this book from being saved:
 <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
 </ul>
 <% end %>

<%= form_with model: @book,url:book_path(@book.id),method: :patch do |f| %>

<div class="text_field">
<p>Title</p>
<%= f.text_field:title %>
</div>

<div class="text_field">
<p>Body</p>
<%= f.text_area:body %>
</div>

<div class="text_field">
<%= f.submit "Update Book" %>
</div>

<%= link_to "Show",book_path(@book.id) %>
 |
<%= link_to "Back","/books" %>

<% end %>
